<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WeeklyTableController</servlet-name>
        <servlet-class>Controller.WeeklyTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailsSessionController</servlet-name>
        <servlet-class>Controller.DetailsSessionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailsLecturersController</servlet-name>
        <servlet-class>Controller.DetailsLecturersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupStudentController</servlet-name>
        <servlet-class>Controller.GroupStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendanceController</servlet-name>
        <servlet-class>Controller.AttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAttendanceController</servlet-name>
        <servlet-class>Controller.ViewAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewSubjectAttendance</servlet-name>
        <servlet-class>Controller.ViewSubjectAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BaseRequiredAuthentication</servlet-name>
        <servlet-class>Authentication.BaseRequiredAuthentication</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WeeklyTableController</servlet-name>
        <url-pattern>/weeklyTable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailsSessionController</servlet-name>
        <url-pattern>/details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailsLecturersController</servlet-name>
        <url-pattern>/detailsLecturers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupStudentController</servlet-name>
        <url-pattern>/group</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceController</servlet-name>
        <url-pattern>/attendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAttendanceController</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewSubjectAttendance</servlet-name>
        <url-pattern>/viewsubject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BaseRequiredAuthentication</servlet-name>
        <url-pattern>/BaseRequiredAuthentication</url-pattern>
    </servlet-mapping>
</web-app>
